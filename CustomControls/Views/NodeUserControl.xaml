<local:ElementUserControl x:Class="CustomControls.NodeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:cmd="clr-namespace:GalaSoft.MvvmLight.Command;assembly=GalaSoft.MvvmLight.Platform"
             xmlns:local="clr-namespace:CustomControls"
             mc:Ignorable="d" 
             DownCommand="{Binding DownCommand}"
             UpCommand="{Binding UpCommand}"
             DeltaCommand="{Binding DeltaCommand}">
    <Ellipse Height="{Binding Height}" Width="{Binding Width}" Fill="{Binding Color}" Stroke="Gray" Opacity="{Binding Opacity}"/>
</local:ElementUserControl>
